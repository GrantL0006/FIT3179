{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 600,
  "title": "Energy Consumption",
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/GrantL0006/FIT3179/main/Homework%20Wk9/js/ne_110m_admin_0_countries.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "params": [
    {
      "name": "year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 1959,
        "max": 2019,
        "step": 10,
        "name": "Year Selection:"
      }
    }
  ],
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/GrantL0006/FIT3179/main/Homework%20Wk9/data/World%20Energy%20Consumption%20-%20temporal.csv"
        },
        "key": "country",
        "fields": ["solar_elec_per_capita", "fossil_energy_per_capita","year"]
      }
    },

    {"calculate": "datum.solar_elec_per_capita + 1", "as": "solar electric"},
    {"calculate": "datum.fossil_energy_per_capita + 1", "as": "fossil energy"}

  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "solar electric",
      "type": "quantitative",
      "scale": {"type": "log", "scheme": "yelloworangered", "reverse": "true"}
    },
    "opacity": {"value": 1},
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "solar_elec_per_capita", "type": "quantitative"}
    ]
  }
}